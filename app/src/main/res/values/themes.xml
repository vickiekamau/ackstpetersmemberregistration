<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ACKSTPeters" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_700</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_800</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Customize your theme here. -->

        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/color_on_error</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/tertiary_900</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>

        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor" tools:targetApi="l">@color/tertiary_900</item>

        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/font</item>
        <item name="materialButtonStyle">@style/Widget.ACK.Button</item>
        <item name="borderlessButtonStyle">@style/Widget.ACK.TextButton</item>
        <!-- Toolbar-->
        <item name="toolbarStyle">@style/Toolbar</item>
        <item name="appBarLayoutStyle">@style/Appbar</item>

        <item name="popupTheme">@style/ThemeOverlay.MaterialComponents.Dark</item>
        <item name="colorControlNormal">@color/primary</item>
        <item name="textInputStyle">@style/Theme.ACK.TextInputLayout.Outline</item>
    </style>


    <style name="Widget.ACK.Button" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.ACK.Button</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.ACK.Button</item>
    </style>

    <style name="Widget.ACK.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.ACK.TextButton</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.ACK.Button</item>
    </style>

    <style name="ThemeOverlay.ACK.Button" parent="">
        <item name="colorPrimary">@color/button_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.ACK.Button</item>
    </style>

    <style name="ThemeOverlay.ACK.TextButton" parent="">
        <item name="colorPrimary">@color/button_color</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="ShapeAppearance.ACK.Button" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>


    <style name="Theme.ACKSTPeters.AuthTheme" parent="Theme.ACKSTPeters">
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">@color/primary_700</item>
    </style>

    <style name="Theme.ACK.Main" parent="Theme.ACKSTPeters">
        <item name="android:windowBackground">@drawable/ack_logo</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>
</resources>